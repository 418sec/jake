{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "comma-style": ["error",
    "last",
    {
      "exceptions": {
        "ArrayExpression": true
      }
    }]
  }
}
